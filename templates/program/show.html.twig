{% extends 'base.html.twig' %}


{% block title %}Série #{{ program.id }}{% endblock %}


{% block body %}

    <div class="media">

        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

        <div class="media-body">

            <h1 class="mt-0">{{ program.title }}</h1>

            <p>{{ program.synopsis }}</p>

            <p>Catégorie : {{ program.category.name }}</p>

        </div>

    </div>

    <div class="accordion accordion-flush" id="accordionFlushExample">
    {% for season in programSeasons %}
        {% set i = ( i | default(0) ) + 1 %}
        <div class="accordion-item">
          <h2 class="accordion-header" id="flush-headingOne">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{ i }}" aria-expanded="false" aria-controls="flush-collapse{{ i }}">
                Saison {{ i }}
            </button>
          </h2>
          <div id="flush-collapse{{ i }}" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
            <div class="accordion-body">
                {{ season.description }} <a href="{{ path('program_show_season_show', { programSlug: program.slug, id: season.id }) }}">En savoir plus...</a>
            </div>
          </div>
        </div>
    {% else %}
        <div>
            il n'y a actuellement aucune saison d'enregistrée dans la base de donné
        </div>    
    {% endfor %}
    <strong>Acteurs :</strong>

    <ul>

    {% for actor in program.actors %}

        <li>{{ actor.name }} </li>

    {% else %}

        <li>Aucun acteur pour cette série</li>

    {% endfor %}

    </ul>
    <a href="{{ path('program_index') }}">

        Retour à la liste des programmes

    </a>

{% endblock %}