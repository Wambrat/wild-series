{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    <div class="row">
    {% for program in programs %}
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
                    <p class="card-text">{{ program.summary }}</p>
                    {# Lien vers la fiche de la série : #}
                    <a href="{{ path("program_show", { id: program.id }) }}" class="btn btn-primary">Voir l'affiche</a>
                </div>    
            </div>
        </div>    
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    </div>
    <a href="{{ path('default_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}