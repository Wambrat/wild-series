{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block body %}
    <h1>Actor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
                <th>Programs</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>
                    <a href="{{ path('actor_show', {'id': actor.id}) }}">show</a>
                    <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>
                </td>
                <td>
            {% for program in actor.programs %}
                {{program.title}}
            {% else %}

            Aucune serie pour cet(te) acteur(ice)

            {% endfor %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actor_new') }}">Create new</a>
{% endblock %}
